// WARNING: Development-only permissive rules.
// These rules allow anyone (unauthenticated) to read and write all documents.
// DO NOT use these rules in production. They are suitable only for local testing
// or short-term development when you understand the security implications.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write on all documents to any caller.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
